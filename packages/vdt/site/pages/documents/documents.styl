@import '../../css/solarized_light.css';

#page
    display flex
    min-height 100%
    width 1080px
    margin 0 auto
    position relative

.ctrl-main-container
    padding 0
.javascript .xml
    opacity 1
.hljs-aspect .hljs-title, .hljs-class .hljs-title, .hljs-params, .hljs-variable
    color #618ea5 

aside
    // position fixed
    width 150px
    height 100%
    background #fff
    border-right 1px solid #d9d9d9
    border-left 1px solid #d9d9d9
    overflow auto
    h5
        color #999
        font-size 14px
        margin 25px 0 15px 20px
    ul
        list-style none
        margin 0
        padding 0
    li
        a
            display block
            color #333
            height 30px
            line-height 30px
            padding-left 24px
        &.active
            a
                color #fe4444
                background #f5e6e6

article
    // margin 15px 15px 15px 165px
    margin-left 15px
    flex 1
    border 1px solid #d9d9d9
    border-top 0
    border-bottom 0
    padding 0 15px
    overflow hidden
    h2
        margin 30px 0 20px 0
        font-size 18px
    h3
        margin-top 20px
        code
            font-size 16px
.article-head
    border-bottom 1px solid #eee
    padding 10px 0
    margin-bottom 20px
    h1
        font-size 22px
        margin-bottom 0
        float left
.edit-link
    float left
    margin 17px 0 0 10px
    color #999
    font-family: 'Lucida Grande', 'Calibri', Helvetica, Arial, sans-serif;
    font-style italic

pre
    font-size 14px
    position relative

blockquote
    border-left 4px solid #ddd
    color #777
    padding 0 15px
    margin 0 0 15px 0

.example {
    padding: 0;
    // display: flex;
    list-style: none;
    // margin-right: -4em;
}
.example > li {
    // margin-right: 4em;
    // flex: 1;
    // display: flex;
    // flex-direction: column;
}
.example
    pre
        margin-bottom 0
.example-js,
.example-js pre {
    display: flex; 
    flex: 1;
}
.example-js code {
    flex: 1;
}
.example-output {
    position relative
    margin: 1em 0;
    padding: 0.5em;
    background: #f6f6f6;
    flex: 1;
    border-radius: 4px;
    font-size: 14px;
    display: list-item !important;
}

.example-template
    pre:last-of-type
        display flex
        flex 1
        code
            flex 1

.example-result
    position relative
    pre
        display flex
        flex 1
    code
        flex 1
    &:before
        // content '=>'
        display block
        font-size 40px
        position absolute
        top 50%
        margin-top -32px
        letter-spacing -12px
        left -47px

.example-js
    position relative
    &:before
        @extend .example-result:before
        // content '+'
        left -39px
.example-output
    position relative
    &:before
        @extend .example-result:before

.event-object
    .example-output
        p
            padding 20px
            margin-top 20px
            background #ddd

.block-type
    position absolute
    top 0
    right 0
    padding 5px
    font-size 10px
    color #999
    pointer-events none
